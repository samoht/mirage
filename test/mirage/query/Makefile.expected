-include Makefile.user

OPAM = opam

DEPEXT ?= $(OPAM) pin add -k path --no-action --yes noop . && \
	    $(OPAM) depext --yes --update noop ;\
	    $(OPAM) pin remove --no-action noop

.PHONY: all depend depends clean build

all:: build

depend depends::dune-get
	duniverse pull

dune-get:
	$(DEPEXT)
	duniverse init

build::
	mirage build

clean::
	mirage clean

